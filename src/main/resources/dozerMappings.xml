<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://dozer.sourceforge.net"
          xsi:schemaLocation="http://dozer.sourceforge.net
          http://dozer.sourceforge.net/schema/beanmapping.xsd">

    <configuration>
        <custom-converters>
            <converter
                    type="com.zuehlke.pgadmissions.rest.converter.ImportedEntityConverter">
                <class-a>com.zuehlke.pgadmissions.domain.imported.ImportedEntity</class-a>
                <class-b>java.lang.Integer</class-b>
            </converter>
            <converter
                    type="com.zuehlke.pgadmissions.rest.converter.OpportunityTypeConverter">
                <class-a>com.zuehlke.pgadmissions.domain.imported.OpportunityType</class-a>
                <class-b>com.zuehlke.pgadmissions.domain.definitions.PrismOpportunityType</class-b>
            </converter>
            <converter
                    type="com.zuehlke.pgadmissions.rest.converter.StudyOptionConverter">
                <class-a>com.zuehlke.pgadmissions.domain.resource.ResourceStudyOption</class-a>
                <class-b>com.zuehlke.pgadmissions.domain.definitions.PrismStudyOption</class-b>
            </converter>
            <converter
                    type="com.zuehlke.pgadmissions.rest.converter.ActionConditionConverter">
                <class-a>com.zuehlke.pgadmissions.domain.resource.ResourceCondition</class-a>
                <class-b>com.zuehlke.pgadmissions.domain.definitions.workflow.PrismActionCondition</class-b>
            </converter>
            <converter
                    type="com.zuehlke.pgadmissions.rest.converter.FinancialDetailsRepresentationConverter">
                <class-a>com.zuehlke.pgadmissions.domain.advert.AdvertFinancialDetail</class-a>
                <class-b>com.zuehlke.pgadmissions.rest.representation.resource.advert.FinancialDetailsRepresentation
                </class-b>
            </converter>
            <converter
                    type="com.zuehlke.pgadmissions.rest.converter.ResourceStudyLocationConverter">
                <class-a>com.zuehlke.pgadmissions.domain.resource.ResourceStudyLocation</class-a>
                <class-b>java.lang.String</class-b>
            </converter>

            <!-- Advert category converter definitions -->
            <converter
                    type="com.zuehlke.pgadmissions.rest.converter.AdvertCategoryConverter">
                <class-a>com.zuehlke.pgadmissions.domain.advert.AdvertDomain</class-a>
                <class-b>com.zuehlke.pgadmissions.domain.definitions.PrismAdvertDomain</class-b>
            </converter>
            <converter
                    type="com.zuehlke.pgadmissions.rest.converter.AdvertCategoryConverter">
                <class-a>com.zuehlke.pgadmissions.domain.advert.AdvertFunction</class-a>
                <class-b>com.zuehlke.pgadmissions.domain.definitions.PrismAdvertFunction</class-b>
            </converter>
            <converter
                    type="com.zuehlke.pgadmissions.rest.converter.AdvertCategoryConverter">
                <class-a>com.zuehlke.pgadmissions.domain.advert.AdvertIndustry</class-a>
                <class-b>com.zuehlke.pgadmissions.domain.definitions.PrismAdvertIndustry</class-b>
            </converter>
            <converter
                    type="com.zuehlke.pgadmissions.rest.converter.AdvertCategoryConverter">
                <class-a>com.zuehlke.pgadmissions.domain.advert.AdvertCompetency</class-a>
                <class-b>java.lang.String</class-b>
            </converter>
            <converter
                    type="com.zuehlke.pgadmissions.rest.converter.AdvertCategoryConverter">
                <class-a>com.zuehlke.pgadmissions.domain.advert.AdvertTheme</class-a>
                <class-b>java.lang.String</class-b>
            </converter>
            <converter
                    type="com.zuehlke.pgadmissions.rest.converter.WorkflowDefinitionConverter">
                <class-a>com.zuehlke.pgadmissions.domain.workflow.ActionCustomQuestionDefinition</class-a>
                <class-b>com.zuehlke.pgadmissions.rest.representation.workflow.WorkflowDefinitionRepresentation
                </class-b>
            </converter>
            <converter
                    type="com.zuehlke.pgadmissions.rest.converter.WorkflowDefinitionConverter">
                <class-a>com.zuehlke.pgadmissions.domain.display.DisplayPropertyDefinition</class-a>
                <class-b>com.zuehlke.pgadmissions.rest.representation.workflow.WorkflowDefinitionRepresentation
                </class-b>
            </converter>
            <converter
                    type="com.zuehlke.pgadmissions.rest.converter.StateDurationDefinitionConverter">
                <class-a>com.zuehlke.pgadmissions.domain.workflow.StateDurationDefinition</class-a>
                <class-b>com.zuehlke.pgadmissions.rest.representation.workflow.StateDurationDefinitionRepresentation
                </class-b>
            </converter>
            <converter
                    type="com.zuehlke.pgadmissions.rest.converter.NotificationDefinitionConverter">
                <class-a>com.zuehlke.pgadmissions.domain.workflow.NotificationDefinition</class-a>
                <class-b>com.zuehlke.pgadmissions.rest.representation.workflow.NotificationDefinitionRepresentation
                </class-b>
            </converter>
            <converter
                    type="com.zuehlke.pgadmissions.rest.converter.ActionCustomQuestionConfigurationConverter">
                <class-a>
                    com.zuehlke.pgadmissions.rest.dto.ActionCustomQuestionConfigurationDTO.ActionCustomQuestionConfigurationValueDTO
                </class-a>
                <class-b>com.zuehlke.pgadmissions.domain.workflow.ActionCustomQuestionConfiguration</class-b>
            </converter>
            <converter
                    type="com.zuehlke.pgadmissions.rest.converter.NotificationConfigurationConverter">
                <class-a>com.zuehlke.pgadmissions.rest.dto.NotificationConfigurationDTO</class-a>
                <class-b>com.zuehlke.pgadmissions.domain.workflow.NotificationConfiguration</class-b>
            </converter>
            <converter
                    type="com.zuehlke.pgadmissions.rest.converter.WorkflowPropertyConfigurationConverter">
                <class-a>com.zuehlke.pgadmissions.rest.dto.WorkflowPropertyConfigurationDTO</class-a>
                <class-b>com.zuehlke.pgadmissions.domain.workflow.WorkflowConfiguration</class-b>
            </converter>
            <converter
                    type="com.zuehlke.pgadmissions.rest.converter.CommentCustomResponseConverter">
                <class-a>com.zuehlke.pgadmissions.domain.comment.CommentCustomResponse</class-a>
                <class-b>com.zuehlke.pgadmissions.rest.representation.comment.CommentCustomResponseRepresentation
                </class-b>
            </converter>
        </custom-converters>
        <copy-by-references>
            <copy-by-reference>java.util.TimeZone</copy-by-reference>
            <copy-by-reference>org.joda.time.LocalDate</copy-by-reference>
            <copy-by-reference>org.joda.time.LocalDateTime</copy-by-reference>
            <copy-by-reference>org.joda.time.DateTime</copy-by-reference>
        </copy-by-references>
    </configuration>

    <mapping>
        <class-a>com.zuehlke.pgadmissions.dto.ResourceListRowDTO
        </class-a>
        <class-b>com.zuehlke.pgadmissions.rest.representation.resource.ResourceListRowRepresentation
        </class-b>
        <field>
            <a>creatorId</a>
            <b>user.id</b>
        </field>
        <field>
            <a>creatorFirstName</a>
            <b>user.firstName</b>
        </field>
        <field>
            <a>creatorFirstName2</a>
            <b>user.firstName2</b>
        </field>
        <field>
            <a>creatorFirstName3</a>
            <b>user.firstName3</b>
        </field>
        <field>
            <a>creatorLastName</a>
            <b>user.lastName</b>
        </field>
        <field>
            <a>creatorEmail</a>
            <b>user.email</b>
        </field>
        <field>
            <a>creatorAccountImageUrl</a>
            <b>user.accountImageUrl</b>
        </field>
        <field>
            <a>creatorLinkedinProfileUrl</a>
            <b>user.linkedinProfileUrl</b>
        </field>
        <field>
            <a>stateGroupId</a>
            <b>stateGroup</b>
        </field>


    </mapping>

    <mapping>
        <class-a>com.zuehlke.pgadmissions.domain.application.ApplicationProgramDetail
        </class-a>
        <class-b>com.zuehlke.pgadmissions.rest.representation.resource.application.ProgramDetailRepresentation
        </class-b>
        <field>
            <a>studyOption.code</a>
            <b>studyOption</b>
        </field>
    </mapping>

    <mapping>
        <class-a>com.zuehlke.pgadmissions.domain.application.Application
        </class-a>
        <class-b>com.zuehlke.pgadmissions.rest.representation.resource.application.ApplicationExtendedRepresentation
        </class-b>
        <field
                custom-converter="com.zuehlke.pgadmissions.rest.converter.SeparatedStringToListConverter">
            <a>primaryTheme</a>
            <b>primaryThemes</b>
        </field>
        <field
                custom-converter="com.zuehlke.pgadmissions.rest.converter.SeparatedStringToListConverter">
            <a>secondaryTheme</a>
            <b>secondaryThemes</b>
        </field>
    </mapping>

    <mapping>
        <class-a>com.zuehlke.pgadmissions.domain.resource.Resource</class-a>
        <class-b>com.zuehlke.pgadmissions.rest.representation.resource.AbstractResourceRepresentation
        </class-b>
        <field>
            <a>state.id</a>
            <b>state</b>
        </field>
        <field>
            <a>previousState.id</a>
            <b>previousState</b>
        </field>
        <field>
            <a>state.stateGroup.id</a>
            <b>stateGroup</b>
        </field>
        <field-exclude>
            <a>comments</a>
            <b>comments</b>
        </field-exclude>
        <field-exclude>
            <a>applicationRatingAverage</a>
            <b>applicationRatingAverage</b>
        </field-exclude>
    </mapping>

    <mapping>
        <class-a>com.zuehlke.pgadmissions.domain.institution.Institution
        </class-a>
        <class-b>com.zuehlke.pgadmissions.rest.representation.resource.InstitutionRepresentation
        </class-b>
        <field>
            <a>logoImage.id</a>
            <b>logoImage</b>
        </field>        
        <field>
            <a>domicile.id</a>
            <b>domicile</b>
        </field>
        <field>
            <a>advert.address</a>
            <b>address</b>
        </field>
    </mapping>
    
    <mapping>
        <class-a>com.zuehlke.pgadmissions.domain.institution.Institution
        </class-a>
        <class-b>com.zuehlke.pgadmissions.rest.representation.resource.InstitutionAdvertRepresentation
        </class-b>
        <field>
            <a>logoImage.id</a>
            <b>logoImage</b>
        </field>
    </mapping>

    <mapping>
        <class-a>com.zuehlke.pgadmissions.domain.user.User</class-a>
        <class-b>com.zuehlke.pgadmissions.rest.representation.UserExtendedRepresentation
        </class-b>
        <field>
            <a>userAccount.sendApplicationRecommendationNotification</a>
            <b>sendApplicationRecommendationNotification</b>
        </field>
    </mapping>

    <mapping>
        <class-a>com.zuehlke.pgadmissions.domain.institution.InstitutionAddress
        </class-a>
        <class-b>com.zuehlke.pgadmissions.rest.representation.resource.InstitutionAddressRepresentation
        </class-b>
        <field>
            <a>domicile.id</a>
            <b>domicile</b>
        </field>
        <field>
            <a>location.locationX</a>
            <b>locationX</b>
        </field>
        <field>
            <a>location.locationY</a>
            <b>locationY</b>
        </field>
    </mapping>
    
    <mapping>
        <class-a>com.zuehlke.pgadmissions.domain.institution.InstitutionAddress
        </class-a>
        <class-b>com.zuehlke.pgadmissions.rest.dto.InstitutionAddressDTO
        </class-b>
        <field>
            <a>domicile.id</a>
            <b>domicile</b>
        </field>
    </mapping>

    <mapping>
        <class-a>com.zuehlke.pgadmissions.domain.comment.Comment</class-a>
        <class-b>com.zuehlke.pgadmissions.rest.representation.comment.CommentRepresentation
        </class-b>
        <field>
            <a>action.id</a>
            <b>action</b>
        </field>
        <field>
            <a>transitionState.id</a>
            <b>transitionState</b>
        </field>
        <field>
            <a>transitionState.id</a>
            <b>transitionState</b>
        </field>
        <field
                custom-converter="com.zuehlke.pgadmissions.rest.converter.ImportedEntityDisplayConverter">
            <a>rejectionReason</a>
            <b>rejectionReason</b>
        </field>
        <field-exclude>
            <a>assignedUsers</a>
            <b>assignedUsers</b>
        </field-exclude>
    </mapping>

    <mapping>
        <class-a>com.zuehlke.pgadmissions.dto.ActionOutcomeDTO</class-a>
        <class-b>com.zuehlke.pgadmissions.rest.representation.ActionOutcomeRepresentation
        </class-b>
        <field>
            <a>transitionAction.id</a>
            <b>transitionAction</b>
        </field>
    </mapping>

    <mapping>
        <class-a>com.zuehlke.pgadmissions.domain.user.User</class-a>
        <class-b>com.zuehlke.pgadmissions.rest.representation.UserRepresentation
        </class-b>
        <field
                custom-converter="com.zuehlke.pgadmissions.rest.converter.UserAccountToLinkedinProfileUrlConverter">
            <a>userAccount</a>
            <b>linkedinProfileUrl</b>
        </field>
        <field>
            <a>userAccount.primaryExternalAccount.accountImageUrl</a>
            <b>accountImageUrl</b>
        </field>
    </mapping>

    <mapping>
        <class-a>com.zuehlke.pgadmissions.domain.comment.CommentAssignedUser
        </class-a>
        <class-b>com.zuehlke.pgadmissions.rest.representation.comment.CommentAssignedUserRepresentation
        </class-b>
        <field>
            <a>role.id</a>
            <b>role</b>
        </field>
    </mapping>

    <mapping>
        <class-a>com.zuehlke.pgadmissions.domain.workflow.ActionCustomQuestionConfiguration
        </class-a>
        <class-b>
            com.zuehlke.pgadmissions.rest.representation.configuration.ActionCustomQuestionConfigurationRepresentation
        </class-b>
        <field type="one-way">
            <a>customQuestionType.componentName</a>
            <b>component</b>
        </field>
        <field type="one-way"
               custom-converter="com.zuehlke.pgadmissions.rest.converter.SeparatedStringToListConverter">
            <a>options</a>
            <b>options</b>
        </field>
    </mapping>

    <mapping>
        <class-a>com.zuehlke.pgadmissions.domain.workflow.WorkflowConfiguration
        </class-a>
        <class-b>com.zuehlke.pgadmissions.rest.representation.configuration.WorkflowConfigurationRepresentation
        </class-b>
        <field type="one-way" copy-by-reference="true">
            <a>definition.id</a>
            <b>definitionId</b>
        </field>
    </mapping>

    <mapping>
        <class-a>com.zuehlke.pgadmissions.domain.workflow.WorkflowPropertyDefinition
        </class-a>
        <class-b>com.zuehlke.pgadmissions.rest.representation.workflow.WorkflowPropertyDefinitionRepresentation
        </class-b>
        <field copy-by-reference="true">
            <a>id</a>
            <b>id</b>
        </field>
    </mapping>

    <mapping>
        <class-a>com.zuehlke.pgadmissions.dto.ResourceListActionDTO
        </class-a>
        <class-b>com.zuehlke.pgadmissions.rest.representation.resource.ActionRepresentation
        </class-b>
        <field>
            <a>actionId</a>
            <b>id</b>
        </field>
    </mapping>
    
    <mapping>
        <class-a>com.zuehlke.pgadmissions.domain.comment.CommentSponsorship
        </class-a>
        <class-b>com.zuehlke.pgadmissions.rest.representation.comment.CommentSponsorshipRepresentation
        </class-b>
        <field>
            <a>rejection.id</a>
            <b>rejection</b>
        </field>
    </mapping>
    
    <mapping>
        <class-a>com.zuehlke.pgadmissions.rest.dto.ResourceReportFilterDTO.ResourceReportFilterPropertyDTO
        </class-a>
        <class-b>com.zuehlke.pgadmissions.rest.representation.resource.ResourceSummaryPlotConstraintRepresentation
        </class-b>
        <field>
            <a>entityId</a>
            <b>id</b>
        </field>
        <field>
            <a>entityType</a>
            <b>type</b>
        </field>
    </mapping>

</mappings>
