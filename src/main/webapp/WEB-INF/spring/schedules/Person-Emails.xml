<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd">
<beans>
<!-- Registry User  notifications -->
	<bean id="personNotificationTimerTask"
		class="com.zuehlke.pgadmissions.timers.RegistryNotificationTimerTask">
		<constructor-arg index="0" ref="sessionFactoryMail" />
		<constructor-arg index="1" ref="registryMailSender" />
		<constructor-arg index="2" ref="mailApplicationsService" />
		<constructor-arg index="3" ref="mailConfigurationService" />
		<constructor-arg index="4" ref="mailCommentFactory"/>
		<constructor-arg index="5" ref="mailCommentService"/>
	</bean>

	<bean id="registryNotificationSchedule" class="org.springframework.scheduling.timer.ScheduledTimerTask">
		<property name="delay" value="2000" />
		<property name="period" value="${email.schedule.period.milliseconds}" />
		<property name="timerTask" ref="personNotificationTimerTask" />
	</bean>
</beans>