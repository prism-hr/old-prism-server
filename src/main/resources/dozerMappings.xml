<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns="http://dozer.sourceforge.net" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://dozer.sourceforge.net
          http://dozer.sourceforge.net/schema/beanmapping.xsd">

    <configuration>
        <custom-converters>
            <converter type="com.zuehlke.pgadmissions.rest.converter.ImportedEntityConverter">
                <class-a>com.zuehlke.pgadmissions.domain.imported.ImportedEntity</class-a>
                <class-b>java.lang.Integer</class-b>
            </converter>
            <converter type="com.zuehlke.pgadmissions.rest.converter.ProgramTypeConverter">
                <class-a>com.zuehlke.pgadmissions.domain.imported.ProgramType</class-a>
                <class-b>com.zuehlke.pgadmissions.domain.definitions.PrismProgramType</class-b>
            </converter>
            <converter type="com.zuehlke.pgadmissions.rest.converter.StudyOptionConverter">
                <class-a>com.zuehlke.pgadmissions.domain.program.ProgramStudyOption</class-a>
                <class-b>com.zuehlke.pgadmissions.domain.definitions.PrismStudyOption</class-b>
            </converter>
            <converter type="com.zuehlke.pgadmissions.rest.converter.FinancialDetailsRepresentationConverter">
                <class-a>com.zuehlke.pgadmissions.domain.advert.AdvertFinancialDetail</class-a>
                <class-b>com.zuehlke.pgadmissions.rest.representation.resource.advert.FinancialDetailsRepresentation</class-b>
            </converter>

            <!-- Advert category converter definitions -->
            <converter type="com.zuehlke.pgadmissions.rest.converter.AdvertCategoryConverter">
                <class-a>com.zuehlke.pgadmissions.domain.advert.AdvertDomain</class-a>
                <class-b>com.zuehlke.pgadmissions.domain.definitions.PrismAdvertDomain</class-b>
            </converter>
            <converter type="com.zuehlke.pgadmissions.rest.converter.AdvertCategoryConverter">
                <class-a>com.zuehlke.pgadmissions.domain.advert.AdvertFunction</class-a>
                <class-b>com.zuehlke.pgadmissions.domain.definitions.PrismAdvertFunction</class-b>
            </converter>
            <converter type="com.zuehlke.pgadmissions.rest.converter.AdvertCategoryConverter">
                <class-a>com.zuehlke.pgadmissions.domain.advert.AdvertIndustry</class-a>
                <class-b>com.zuehlke.pgadmissions.domain.definitions.PrismAdvertIndustry</class-b>
            </converter>
            <converter type="com.zuehlke.pgadmissions.rest.converter.AdvertCategoryConverter">
                <class-a>com.zuehlke.pgadmissions.domain.advert.AdvertCompetency</class-a>
                <class-b>java.lang.String</class-b>
            </converter>
            <converter type="com.zuehlke.pgadmissions.rest.converter.AdvertCategoryConverter">
                <class-a>com.zuehlke.pgadmissions.domain.advert.AdvertTheme</class-a>
                <class-b>java.lang.String</class-b>
            </converter>
            <converter type="com.zuehlke.pgadmissions.rest.converter.AdvertCategoryConverter">
                <class-a>com.zuehlke.pgadmissions.domain.advert.AdvertInstitution</class-a>
                <class-b>java.lang.Integer</class-b>
            </converter>
            <converter type="com.zuehlke.pgadmissions.rest.converter.AdvertCategoryConverter">
                <class-a>com.zuehlke.pgadmissions.domain.advert.AdvertProgramType</class-a>
                <class-b>com.zuehlke.pgadmissions.domain.definitions.PrismProgramType</class-b>
            </converter>
            <converter type="com.zuehlke.pgadmissions.rest.converter.WorkflowDefinitionConverter">
                <class-a>com.zuehlke.pgadmissions.domain.workflow.ActionCustomQuestionDefinition</class-a>
                <class-b>com.zuehlke.pgadmissions.rest.representation.workflow.WorkflowDefinitionRepresentation</class-b>
            </converter>
            <converter type="com.zuehlke.pgadmissions.rest.converter.WorkflowDefinitionConverter">
                <class-a>com.zuehlke.pgadmissions.domain.display.DisplayPropertyDefinition</class-a>
                <class-b>com.zuehlke.pgadmissions.rest.representation.workflow.WorkflowDefinitionRepresentation</class-b>
            </converter>
            <converter type="com.zuehlke.pgadmissions.rest.converter.StateDurationDefinitionConverter">
                <class-a>com.zuehlke.pgadmissions.domain.workflow.StateDurationDefinition</class-a>
                <class-b>com.zuehlke.pgadmissions.rest.representation.workflow.StateDurationDefinitionRepresentation</class-b>
            </converter>
            <converter type="com.zuehlke.pgadmissions.rest.converter.NotificationDefinitionConverter">
                <class-a>com.zuehlke.pgadmissions.domain.workflow.NotificationDefinition</class-a>
                <class-b>com.zuehlke.pgadmissions.rest.representation.workflow.NotificationDefinitionRepresentation</class-b>
            </converter>
            <converter type="com.zuehlke.pgadmissions.rest.converter.WorkflowPropertyDefinitionConverter">
                <class-a>com.zuehlke.pgadmissions.domain.workflow.WorkflowPropertyDefinition</class-a>
                <class-b>com.zuehlke.pgadmissions.rest.representation.workflow.WorkflowPropertyDefinitionRepresentation</class-b>
            </converter>
            <converter type="com.zuehlke.pgadmissions.rest.converter.ActionCustomQuestionConfigurationConverter">
                <class-a>com.zuehlke.pgadmissions.rest.dto.ActionCustomQuestionConfigurationDTO.ActionCustomQuestionConfigurationValueDTO</class-a>
                <class-b>com.zuehlke.pgadmissions.domain.workflow.ActionCustomQuestionConfiguration</class-b>
            </converter>
            <converter type="com.zuehlke.pgadmissions.rest.converter.DisplayPropertyConfigurationConverter">
                <class-a>com.zuehlke.pgadmissions.rest.dto.DisplayPropertyConfigurationDTO.DisplayPropertyConfigurationValueDTO</class-a>
                <class-b>com.zuehlke.pgadmissions.domain.display.DisplayPropertyConfiguration</class-b>
            </converter>
            <converter type="com.zuehlke.pgadmissions.rest.converter.NotificationConfigurationConverter">
                <class-a>com.zuehlke.pgadmissions.rest.dto.NotificationConfigurationDTO</class-a>
                <class-b>com.zuehlke.pgadmissions.domain.workflow.NotificationConfiguration</class-b>
            </converter>
            <converter type="com.zuehlke.pgadmissions.rest.converter.WorkflowPropertyConfigurationConverter">
                <class-a>com.zuehlke.pgadmissions.rest.dto.WorkflowPropertyConfigurationDTO</class-a>
                <class-b>com.zuehlke.pgadmissions.domain.workflow.WorkflowConfiguration</class-b>
            </converter>
        </custom-converters>
        <copy-by-references>
            <copy-by-reference>java.util.TimeZone</copy-by-reference>
            <copy-by-reference>org.joda.time.LocalDate</copy-by-reference>
            <copy-by-reference>org.joda.time.LocalDateTime</copy-by-reference>
            <copy-by-reference>org.joda.time.DateTime</copy-by-reference>
        </copy-by-references>
    </configuration>

    <mapping>
        <class-a>com.zuehlke.pgadmissions.dto.ResourceConsoleListRowDTO</class-a>
        <class-b>com.zuehlke.pgadmissions.rest.representation.resource.ResourceListRowRepresentation</class-b>
        <field>
        	<a>creatorId</a>
        	<b>user.id</b>
        </field>
        <field>
            <a>creatorFirstName</a>
            <b>user.firstName</b>
        </field>
        <field>
            <a>creatorFirstName2</a>
            <b>user.firstName2</b>
        </field>
        <field>
            <a>creatorFirstName3</a>
            <b>user.firstName3</b>
        </field>
        <field>
            <a>creatorLastName</a>
            <b>user.lastName</b>
        </field>
    </mapping>

    <mapping>
        <class-a>com.zuehlke.pgadmissions.domain.application.ApplicationProgramDetail</class-a>
        <class-b>com.zuehlke.pgadmissions.rest.representation.resource.application.ProgramDetailRepresentation</class-b>
        <field>
            <a>studyOption.code</a>
            <b>studyOption</b>
        </field>
    </mapping>

    <mapping>
        <class-a>com.zuehlke.pgadmissions.domain.application.Application</class-a>
        <class-b>com.zuehlke.pgadmissions.rest.representation.resource.application.ApplicationExtendedRepresentation</class-b>
        <field custom-converter="com.zuehlke.pgadmissions.rest.converter.SeparatedStringToListConverter">
            <a>primaryTheme</a>
            <b>primaryThemes</b>
        </field>
        <field custom-converter="com.zuehlke.pgadmissions.rest.converter.SeparatedStringToListConverter">
            <a>secondaryTheme</a>
            <b>secondaryThemes</b>
        </field>
    </mapping>

    <mapping>
        <class-a>com.zuehlke.pgadmissions.domain.resource.Resource</class-a>
        <class-b>com.zuehlke.pgadmissions.rest.representation.AbstractResourceRepresentation</class-b>
        <field>
            <a>state.id</a>
            <b>state</b>
        </field>
        <field-exclude>
            <a>comments</a>
            <b>comments</b>
        </field-exclude>
    </mapping>

    <mapping>
        <class-a>com.zuehlke.pgadmissions.domain.institution.Institution</class-a>
        <class-b>com.zuehlke.pgadmissions.rest.representation.resource.InstitutionExtendedRepresentation</class-b>
        <field>
            <a>domicile.id</a>
            <b>domicile</b>
        </field>
    </mapping>

    <mapping>
        <class-a>com.zuehlke.pgadmissions.domain.institution.Institution</class-a>
        <class-b>com.zuehlke.pgadmissions.rest.representation.resource.InstitutionRepresentation</class-b>
        <field>
            <a>domicile.id</a>
            <b>domicile</b>
        </field>
    </mapping>

    <mapping>
        <class-a>com.zuehlke.pgadmissions.domain.user.User</class-a>
        <class-b>com.zuehlke.pgadmissions.rest.representation.UserExtendedRepresentation</class-b>
        <field>
            <a>latestCreationScope.id</a>
            <b>latestCreationScope</b>
        </field>
    </mapping>

    <mapping>
        <class-a>com.zuehlke.pgadmissions.domain.institution.InstitutionAddress</class-a>
        <class-b>com.zuehlke.pgadmissions.rest.representation.resource.InstitutionAddressRepresentation</class-b>
        <field>
            <a>domicile.id</a>
            <b>domicile</b>
        </field>
    </mapping>

    <mapping>
        <class-a>com.zuehlke.pgadmissions.domain.comment.Comment</class-a>
        <class-b>com.zuehlke.pgadmissions.rest.representation.comment.CommentRepresentation</class-b>
        <field>
            <a>action.id</a>
            <b>action</b>
        </field>
        <field>
            <a>transitionState.id</a>
            <b>transitionState</b>
        </field>
        <field>
            <a>applicationEligible</a>
            <b>eligible</b>
        </field>
        <field>
            <a>applicationInterested</a>
            <b>interested</b>
        </field>
    </mapping>

    <mapping>
        <class-a>com.zuehlke.pgadmissions.domain.comment.CommentTransitionState</class-a>
        <class-b>com.zuehlke.pgadmissions.rest.representation.comment.CommentTransitionStateRepresentation</class-b>
        <field>
            <a>transitionState.id</a>
            <b>transitionState</b>
        </field>
    </mapping>

    <mapping>
        <class-a>com.zuehlke.pgadmissions.dto.ActionOutcomeDTO</class-a>
        <class-b>com.zuehlke.pgadmissions.rest.representation.ActionOutcomeRepresentation</class-b>
        <field>
            <a>transitionAction.id</a>
            <b>transitionAction</b>
        </field>
    </mapping>

    <mapping>
        <class-a>com.zuehlke.pgadmissions.domain.comment.CommentAssignedUser</class-a>
        <class-b>com.zuehlke.pgadmissions.rest.representation.comment.CommentAssignedUserRepresentation</class-b>
        <field>
            <a>role.id</a>
            <b>role</b>
        </field>
    </mapping>

    <mapping>
        <class-a>com.zuehlke.pgadmissions.domain.workflow.ActionCustomQuestionConfiguration</class-a>
        <class-b>com.zuehlke.pgadmissions.rest.representation.configuration.ActionCustomQuestionConfigurationRepresentation</class-b>
        <field type="one-way">
            <a>customQuestionType.componentName</a>
            <b>component</b>
        </field>
    </mapping>

    <mapping>
        <class-a>com.zuehlke.pgadmissions.domain.workflow.WorkflowConfiguration</class-a>
        <class-b>com.zuehlke.pgadmissions.rest.representation.configuration.WorkflowConfigurationRepresentation</class-b>
        <field type="one-way" copy-by-reference="true">
            <a>definition.id</a>
            <b>definitionId</b>
        </field>
    </mapping>

</mappings>
