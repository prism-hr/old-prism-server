<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans>

	<!-- reviewer notification -->
	<bean id="reviewerNotificationTimerTask" class="com.zuehlke.pgadmissions.timers.ReviewerNotificationTask">
		<constructor-arg index="0" ref="sessionFactoryMail" />
		<constructor-arg index="1" ref="reviewerMailSender" />
		<constructor-arg index="2" ref="mailReviewerDAO" />		
	</bean>

	<bean id="reviewerNotificationSchedule" class="org.springframework.scheduling.timer.ScheduledTimerTask">
		<property name="delay" value="${delay.26}" />
		<property name="period" value="${email.schedule.period.milliseconds}" />
		<property name="timerTask" ref="reviewerNotificationTimerTask" />
	</bean>
	
	<!-- reviewer remindeers -->
	<bean id="reviewerReminderTimerTask" class="com.zuehlke.pgadmissions.timers.ReviewerReminderTask">
		<constructor-arg index="0" ref="sessionFactoryMail" />
		<constructor-arg index="1" ref="reviewerMailSender" />
		<constructor-arg index="2" ref="mailReviewerDAO" />
	</bean>

	<bean id="reviewerReminderSchedule" class="org.springframework.scheduling.timer.ScheduledTimerTask">
		<property name="delay" value="${delay.27}" />
		<property name="period" value="${email.schedule.period.milliseconds}" />
		<property name="timerTask" ref="reviewerReminderTimerTask" />
	</bean>
</beans>