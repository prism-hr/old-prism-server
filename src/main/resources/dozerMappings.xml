<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns="http://dozer.sourceforge.net"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://dozer.sourceforge.net
          http://dozer.sourceforge.net/schema/beanmapping.xsd">

    <configuration>
        <custom-converters>
            <converter type="com.zuehlke.pgadmissions.rest.converter.LocalDateConverter">
                <class-a>org.joda.time.LocalDate</class-a>
                <class-b>org.joda.time.LocalDate</class-b>
            </converter>
            <converter type="com.zuehlke.pgadmissions.rest.converter.ImportedEntityConverter">
                <class-a>com.zuehlke.pgadmissions.domain.ImportedEntity</class-a>
                <class-b>java.lang.String</class-b>
            </converter>
        </custom-converters>
    </configuration>

    <mapping>
        <class-a>com.zuehlke.pgadmissions.dto.ResourceConsoleListRowDTO</class-a>
        <class-b>com.zuehlke.pgadmissions.rest.representation.application.ResourceListRowRepresentation</class-b>
        <field>
            <a>creatorFirstName</a>
            <b>user.firstName</b>
        </field>
        <field>
            <a>creatorFirstName2</a>
            <b>user.firstName2</b>
        </field>
        <field>
            <a>creatorFirstName3</a>
            <b>user.firstName3</b>
        </field>
        <field>
            <a>creatorLastName</a>
            <b>user.lastName</b>
        </field>
        <field>
            <a>institutionTitle</a>
            <b>institution.title</b>
        </field>
        <field>
            <a>programTitle</a>
            <b>program.title</b>
        </field>
        <field>
            <a>projectTitle</a>
            <b>project.title</b>
        </field>
        <field custom-converter="com.zuehlke.pgadmissions.rest.converter.CommaSeparatedActionsToListConverter">
            <a>actions</a>
            <b>actions</b>
        </field>
    </mapping>

    <mapping>
        <class-a>com.zuehlke.pgadmissions.domain.StateAction</class-a>
        <class-b>com.zuehlke.pgadmissions.rest.representation.workflow.StateActionRepresentation</class-b>
        <field>
            <a>state.id</a>
            <b>state</b>
        </field>
        <field>
            <a>action.actionCategory</a>
            <b>action.category</b>
        </field>
    </mapping>

    <mapping>
        <class-a>com.zuehlke.pgadmissions.domain.Resource</class-a>
        <class-b>com.zuehlke.pgadmissions.rest.representation.ResourceRepresentation</class-b>
        <field>
            <a>state.id</a>
            <b>state</b>
        </field>
    </mapping>

    <mapping>
        <class-a>com.zuehlke.pgadmissions.domain.Comment</class-a>
        <class-b>com.zuehlke.pgadmissions.rest.representation.CommentRepresentation</class-b>
        <field>
            <a>transitionState.id</a>
            <b>transitionState</b>
        </field>
    </mapping>

    <mapping>
        <class-a>com.zuehlke.pgadmissions.domain.CommentAssignedUser</class-a>
        <class-b>com.zuehlke.pgadmissions.rest.representation.CommentAssignedUserRepresentation</class-b>
        <field>
            <a>role.id</a>
            <b>role</b>
        </field>
    </mapping>

    <mapping>
        <class-a>com.zuehlke.pgadmissions.rest.dto.application.ApplicationProgramDetailsDTO</class-a>
        <class-b>com.zuehlke.pgadmissions.domain.ApplicationProgramDetails</class-b>
        <field custom-converter-id="importedEntityConverter">
            <a>studyOption</a>
            <b>studyOption</b>
        </field>
    </mapping>

</mappings>
