<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd">
<beans>
	<!-- Approval notifications -->
	<bean id="approverAdminApprovalNotificationTimerTask"
		class="com.zuehlke.pgadmissions.timers.ApproverAndAdminApprovalNotificationTask">
		<constructor-arg index="0" ref="sessionFactoryMail" />
		<constructor-arg index="1" ref="approverMailSender" />
		<constructor-arg index="2" ref="mailApplicationDAO" />
	</bean>

	<bean id="approvalRestartRequestNotificationTimerTask"
		class="com.zuehlke.pgadmissions.timers.ApprovalRestartRequestNotificationTimerTask">
		<constructor-arg index="0" ref="sessionFactoryMail" />
		<constructor-arg index="1" ref="approvalRestartRequestMailSender" />
		<constructor-arg index="2" ref="mailApplicationsService" />
	</bean>
	
		<bean id="approvalRestartRequestReminderTimerTask"
		class="com.zuehlke.pgadmissions.timers.ApprovalRestartRequestReminderTimerTask">
		<constructor-arg index="0" ref="sessionFactoryMail" />
		<constructor-arg index="1" ref="approvalRestartRequestMailSender" />
		<constructor-arg index="2" ref="mailApplicationsService" />
	</bean>
	<bean id="approverAdminApprovalNotificationSchedule" class="org.springframework.scheduling.timer.ScheduledTimerTask">
		<property name="delay" value="${delay.17}" />
		<property name="period" value="${email.schedule.period.milliseconds}" />
		<property name="timerTask" ref="approverAdminApprovalNotificationTimerTask" />
	</bean>
	
	<!-- Approval reminders -->
	<bean id="approverApprovalReminderTimerTask" class="com.zuehlke.pgadmissions.timers.RegisteredUserReminderTimerTask">
		<constructor-arg index="0" ref="sessionFactoryMail" />
		<constructor-arg index="1" ref="mailApplicationDAO" />
		<constructor-arg index="2" ref="adminMailSender" />
		<constructor-arg index="3" value="APPROVAL_REMINDER" />
		<constructor-arg index="4" value="APPROVAL" />
		<constructor-arg index="5" value="approval.request.reminder" />
		<constructor-arg index="6" value="private/approvers/mail/application_approval_reminder.ftl" />
		<constructor-arg index="7" value="approval.request.reminder" />
		<constructor-arg index="8" value="private/approvers/mail/application_approval_reminder.ftl" />
	</bean>

	<bean id="approverApprovalReminderSchedule" class="org.springframework.scheduling.timer.ScheduledTimerTask">
		<property name="delay" value="${delay.18}" />
		<property name="period" value="${email.schedule.period.milliseconds}" />
		<property name="timerTask" ref="approverApprovalReminderTimerTask" />
	</bean>
	
	<bean id="approvalRestartRequestNotificationSchedule" class="org.springframework.scheduling.timer.ScheduledTimerTask">
		<property name="delay" value="${delay.19}" />
		<property name="period" value="${email.schedule.period.milliseconds}" />
		<property name="timerTask" ref="approvalRestartRequestNotificationTimerTask" />
	</bean>
	
		<bean id="approvalRestartRequestReminderSchedule" class="org.springframework.scheduling.timer.ScheduledTimerTask">
		<property name="delay" value="${delay.20}" />
		<property name="period" value="${email.schedule.period.milliseconds}" />
		<property name="timerTask" ref="approvalRestartRequestReminderTimerTask" />
	</bean>
	
	
</beans>