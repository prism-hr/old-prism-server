  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3 id="dialog-header"></h3>
  </div>
  <div id="dialog-message" class="modal-body">
    <!-- Modal content -->
    
  </div>
  <div class="modal-footer">
    <button id="popup-ok-button" class="btn btn-primary" data-dismiss="modal" aria-hidden="true">OK</button>
    <button id="popup-cancel-button" class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
  </div>
</div>
